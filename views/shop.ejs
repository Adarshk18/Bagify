<%- include('./partials/header') %>

<div class="min-h-screen flex gap-8 px-10 py-10 bg-gray-50">
  <!-- Sidebar -->
  <aside class="w-1/4">
    <div class="mb-10">
      <h3 class="font-semibold mb-2">Sort by</h3>
      <form action="/shop">
        <select class="border px-3 py-2 rounded w-full" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="mb-10">
      <h3 class="font-semibold mb-2">Categories</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="#" class="hover:underline">New Collection</a></li>
        <li><a href="#" class="hover:underline">All Products</a></li>
        <li><a href="#" class="hover:underline">Discounted Products</a></li>
      </ul>
    </div>

    <div>
      <h3 class="font-semibold mb-2">Filter by</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="#" class="hover:underline">Availability</a></li>
        <li><a href="#" class="hover:underline">Discount</a></li>
      </ul>
    </div>
  </aside>

  <!-- Main Product Grid -->
  <main class="w-3/4">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8"
    >
      <% products.forEach(function(product) { %>
      <div
        class="w-full shadow rounded overflow-hidden bg-white transform hover:scale-105 transition-transform duration-200 relative"
      >
       <% if ((product.discount + '').trim() !== '') { %>

        <span
          class="absolute top-2 left-2 bg-red-500 text-white text-xs px-2 py-1 rounded-full z-10"
        >
          ₹ <%= product.discount %> OFF
        </span>
        <% } %>
        <div
          class="w-full h-52 flex items-center justify-center bg-gradient-to-r from-white via-[<%= product.bgcolor %>] to-white"
        >
          <img
            class="h-full object-contain p-2"
            src="/uploads/<%= product.image %>"
            alt="Product Image"
          />
        </div>
        <div
          class="flex justify-between items-center px-4 py-3"
          style="background-color: <%= product.panelcolor %>; color: <%= product.textcolor %>;"
        >

          <div>
            <h3 class="font-semibold"><%= product.name %></h3>
            <h4 class="text-sm">
              ₹ <%= product.price %> <% if ((product.discount + '').trim() !== '') { %>

              <span class="line-through text-gray-300 ml-2">
                ₹ <%= parseInt(product.price) + parseInt(product.discount) %>
              </span>
              <% } %>
            </h4>
          </div>
          <a
            class="w-7 h-7 flex items-center justify-center rounded-full bg-white text-black hover:bg-gray-200 transition"
            href="#"
          >
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
</div>

<%- include('./partials/footer') %>
