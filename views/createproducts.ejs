<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
<div class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-6 py-2 rounded-md shadow-lg z-50">
  <%= success %>
</div>
<% } %>

<div class="min-h-screen bg-gray-50 px-8 py-12">
  <div class="max-w-4xl mx-auto bg-white rounded-md shadow p-8">
    <h2 class="text-2xl font-bold mb-6 text-center">üõçÔ∏è Create New Product</h2>

    <form action="/products/create" method="POST" enctype="multipart/form-data" class="space-y-8">
      <!-- Product Details -->
      <div>
        <h3 class="text-xl font-semibold mb-3">üì¶ Product Details</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="block font-medium mb-1">Product Name</label>
            <input
              name="name"
              type="text"
              required
              class="w-full border px-4 py-2 rounded focus:outline-none focus:ring"
              placeholder="Enter product name"
            />
          </div>
          <div>
            <label class="block font-medium mb-1">Product Image</label>
            <input
              name="image"
              type="file"
              accept="image/*"
              class="w-full border px-4 py-2 rounded"
            />
          </div>
          <div>
            <label class="block font-medium mb-1">Price</label>
            <input
              name="price"
              type="number"
              required
              class="w-full border px-4 py-2 rounded"
              placeholder="Enter price"
            />
          </div>
          <div>
            <label class="block font-medium mb-1">Discount</label>
            <input
              name="discount"
              type="number"
              class="w-full border px-4 py-2 rounded"
              placeholder="Enter discount (optional)"
            />
          </div>
        </div>
      </div>

      <!-- Panel Styling -->
      <div>
        <h3 class="text-xl font-semibold mb-3">üé® Panel Styling</h3>
        <div class="grid md:grid-cols-3 gap-4">
          <div>
            <label class="block font-medium mb-1">Background Color</label>
            <input
              name="bgcolor"
              type="text"
              class="w-full border px-4 py-2 rounded"
              placeholder="#f5f5f5"
            />
          </div>
          <div>
            <label class="block font-medium mb-1">Panel Color</label>
            <input
              name="panelcolor"
              type="text"
              class="w-full border px-4 py-2 rounded"
              placeholder="#ffffff"
            />
          </div>
          <div>
            <label class="block font-medium mb-1">Text Color</label>
            <input
              name="textcolor"
              type="text"
              class="w-full border px-4 py-2 rounded"
              placeholder="#333333"
            />
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full font-medium"
        >
          ‚ûï Add Product
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
