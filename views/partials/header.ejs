
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bagify</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

  <!-- Remix Icons for shop/cart/etc. -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-white text-black transition-colors duration-300">
  <header class="w-full bg-white shadow-sm px-6 py-4 flex items-center justify-between relative z-20">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold 
           bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 
           bg-clip-text text-transparent
           hover:from-pink-500 hover:to-yellow-400 
           transition-all duration-500">
      Bagify
    </a>

    <!-- ================= SHOP PAGE HEADER ================= -->
    <% if (url.startsWith("/shop")) { %>
      <div class="hidden md:flex flex-1 items-center ml-6 gap-6">
        <!-- Search Bar -->
        <form action="/products/shop" method="GET" class="flex-1 flex items-center gap-2">
          <input type="text" name="search" placeholder="Search products..."
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            class="w-full border border-gray-300 dark:border-gray-700 
                   px-4 py-2 rounded-full focus:outline-none focus:ring-2 
                   focus:ring-blue-400 shadow-sm transition" />
          <button type="submit"
            class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition">
            <i class="ri-search-line text-xl"></i>
          </button>
        </form>

        <!-- Desktop Nav -->
        <nav class="flex items-center gap-6 text-sm font-medium text-gray-700">
          <a href="/shop" class="flex items-center gap-1 hover:text-blue-600">
            <i class="ri-store-2-line"></i> Shop
          </a>
          <a href="/cart" class="relative flex items-center gap-1 hover:text-blue-600">
            <i class="ri-shopping-cart-line text-xl"></i> Cart
            <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
              <span
                class="absolute -top-2 -right-3 bg-red-500 text-white text-xs rounded-full px-2 py-0.5">
                <%= cartCount %>
              </span>
            <% } %>
          </a>
          <a href="/orders" class="flex items-center gap-1 hover:text-blue-600">
            <i class="ri-file-list-2-line"></i> Orders
          </a>
          <a href="/users/profile" class="flex items-center gap-1 hover:text-blue-600">
            <i class="ri-user-line"></i> Profile
          </a>
          <a href="/users/logout" class="flex items-center gap-1 text-red-500 hover:underline">
            <i class="ri-logout-box-r-line"></i> Logout
          </a>
        </nav>
      </div>

      <!-- Mobile Hamburger -->
      <button id="menuBtn" class="md:hidden text-2xl text-gray-700">
        <i class="fas fa-bars"></i>
      </button>

    <!-- ================= ADMIN LOGIN ================= -->
    <% } else if (url.startsWith("/admin/login")) { %>
      <nav class="hidden md:flex gap-6 items-center text-sm font-medium text-gray-700">
        <a href="/users" class="text-blue-500 hover:underline">
          Not an Admin? User Login
        </a>
      </nav>
      <button id="menuBtn" class="md:hidden text-2xl text-gray-700">
        <i class="fas fa-bars"></i>
      </button>

    <!-- ================= ADMIN PANEL ================= -->
    <% } else if (user && user.role==='admin' ) { %>
      <nav class="hidden md:flex gap-6 items-center text-sm font-medium text-gray-700">
        <a href="/admin" class="text-purple-600 font-semibold hover:underline">Admin Panel</a>
        <a href="/admin/orders" class="text-purple-600 font-semibold hover:underline">All Orders</a>
        <a href="/admin/dashboard" class="block text-purple-600 font-semibold hover:underline">Admin Dashboard</a>
        <a href="/admin/logout" class="text-red-500 hover:underline">Logout</a>
      </nav>
      <button id="menuBtn" class="md:hidden text-2xl text-gray-700">
        <i class="fas fa-bars"></i>
      </button>

    <!-- ================= LOGGED-IN USER (OTHER PAGES) ================= -->
    <% } else if (user) { %>
      <nav class="hidden md:flex gap-6 items-center text-sm font-medium text-gray-700">
        <a href="/shop" class="hover:text-blue-600">Shop</a>
        <a href="/cart" class="hover:text-blue-600">Cart</a>
        <a href="/orders" class="hover:text-blue-600">Orders</a>
        <a href="/users/profile" class="hover:text-blue-600">Profile</a>
        <a href="/users/logout" class="text-red-500 hover:underline">Logout</a>
      </nav>
      <button id="menuBtn" class="md:hidden text-2xl text-gray-700">
        <i class="fas fa-bars"></i>
      </button>
    <% } %>
  </header>

  <!-- ================= MOBILE MENU ================= -->
  <% if (url.startsWith("/shop")) { %>
    <!-- Shop Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden flex-col bg-white shadow-md px-6 py-4 space-y-4">
      <!-- Mobile Search -->
      <form action="/products/shop" method="GET" class="flex items-center gap-2">
        <input type="text" name="search" placeholder="Search products..."
          value="<%= typeof search !== 'undefined' ? search : '' %>"
          class="w-full border border-gray-300 px-4 py-2 rounded-full focus:outline-none 
                 focus:ring-2 focus:ring-blue-400 shadow-sm transition" />
        <button type="submit"
          class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition">
          <i class="ri-search-line text-xl"></i>
        </button>
      </form>

      <!-- Mobile Links -->
      <a href="/shop" class="flex items-center gap-2 hover:text-blue-600">
        <i class="ri-store-2-line"></i> Shop
      </a>
      <a href="/cart" class="relative flex items-center gap-2 hover:text-blue-600">
        <i class="ri-shopping-cart-line"></i> Cart
        <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
          <span
            class="absolute -top-2 left-5 bg-red-500 text-white text-xs rounded-full px-2 py-0.5">
            <%= cartCount %>
          </span>
        <% } %>
      </a>
      <a href="/orders" class="flex items-center gap-2 hover:text-blue-600">
        <i class="ri-file-list-2-line"></i> Orders
      </a>
      <a href="/users/profile" class="flex items-center gap-2 hover:text-blue-600">
        <i class="ri-user-line"></i> Profile
      </a>
      <a href="/users/logout" class="flex items-center gap-2 text-red-500 hover:underline">
        <i class="ri-logout-box-r-line"></i> Logout
      </a>
    </div>

  <% } else if (url.startsWith("/admin/login")) { %>
    <div id="mobileMenu" class="hidden md:hidden flex-col bg-white shadow-md px-6 py-4 space-y-4">
      <a href="/users" class="block text-blue-500 hover:underline">
        Not an Admin? User Login
      </a>
    </div>

  <% } else if (user && user.role==='admin' ) { %>
    <div id="mobileMenu" class="hidden md:hidden flex-col bg-white shadow-md px-6 py-4 space-y-4">
      <a href="/admin" class="block text-purple-600 font-semibold hover:underline">Admin Panel</a>
      <a href="/admin/orders" class="block text-purple-600 font-semibold hover:underline">All Orders</a>
      <a href="/admin/dashboard" class="block text-purple-600 font-semibold hover:underline">Admin Dashboard</a>
      <a href="/admin/logout" class="block text-red-500 hover:underline">Logout</a>
    </div>

  <% } else if (user) { %>
    <div id="mobileMenu" class="hidden md:hidden flex-col bg-white shadow-md px-6 py-4 space-y-4">
      <a href="/shop" class="block hover:text-blue-600">Shop</a>
      <a href="/cart" class="block hover:text-blue-600">Cart</a>
      <a href="/orders" class="block hover:text-blue-600">Orders</a>
      <a href="/users/profile" class="block hover:text-blue-600">Profile</a>
      <a href="/users/logout" class="block text-red-500 hover:underline">Logout</a>
    </div>
  <% } %>

  <!-- Scripts -->
  <script>
    // Mobile menu toggle
    const menuBtn = document.getElementById("menuBtn");
    const mobileMenu = document.getElementById("mobileMenu");
    menuBtn?.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>
</body>

</html>

