<!-- Tailwind CSS CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<!-- Heroicons CDN -->
<script src="https://unpkg.com/heroicons@2.0.16/20/outline/index.min.js"></script>

<header class="w-full bg-white shadow-sm px-6 py-4 flex items-center justify-between relative z-20">
  <a href="/" class="text-2xl font-bold text-blue-600">Bagify</a>

  <!-- Desktop Navigation -->
  <nav class="hidden md:flex gap-6 items-center text-sm font-medium">
    <a href="/shop" class="text-gray-700 hover:text-blue-600">Shop</a>
    <a href="/cart" class="text-gray-700 hover:text-blue-600">Cart</a>

    <% if (typeof user !== 'undefined' && user) { %>
      <a href="/orders" class="text-gray-700 hover:text-blue-600">Orders</a>
      <a href="/users/profile" class="text-gray-700 hover:text-blue-600">Profile</a>

      <% if (user.role === "admin") { %>
        <a href="/admin" class="text-purple-600 font-semibold hover:underline">Admin Panel</a>
        <a href="/admin/orders" class="text-purple-600 font-semibold hover:underline">All Orders</a>
      <% } %>

      <a href="/users/logout" class="text-red-500 hover:underline">Logout</a>
    <% } else { %>
      <a href="/users" class="text-blue-500 hover:underline">Login</a>
    <% } %>
  </nav>

  <!-- Mobile Menu Button -->
  <button id="mobileMenuBtn" class="md:hidden focus:outline-none">
    <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" stroke-width="2"
      viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
      <path d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden absolute top-full left-0 w-full bg-white shadow-md md:hidden">
    <div class="flex flex-col p-4 space-y-2 text-sm font-medium">
      <a href="/shop" class="text-gray-700 hover:text-blue-600">Shop</a>
      <a href="/cart" class="text-gray-700 hover:text-blue-600">Cart</a>

      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/orders" class="text-gray-700 hover:text-blue-600">Orders</a>
        <a href="/users/profile" class="text-gray-700 hover:text-blue-600">Profile</a>

        <% if (user.role === "admin") { %>
          <a href="/admin" class="text-purple-600 font-semibold hover:underline">Admin Panel</a>
          <a href="/admin/orders" class="text-purple-600 font-semibold hover:underline">All Orders</a>
        <% } %>

        <a href="/users/logout" class="text-red-500 hover:underline">Logout</a>
      <% } else { %>
        <a href="/users" class="text-blue-500 hover:underline">Login</a>
      <% } %>
    </div>
  </div>
</header>

<!-- Mobile Toggle Script -->
<script>
  document.getElementById('mobileMenuBtn').addEventListener('click', () => {
    const menu = document.getElementById('mobileMenu');
    menu.classList.toggle('hidden');
  });
</script>
