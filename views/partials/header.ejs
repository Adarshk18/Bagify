<!-- Tailwind CSS CDN (put this inside <head> in your layout if needed) -->
<script src="https://cdn.tailwindcss.com"></script>

<header class="w-full bg-white shadow p-4 flex justify-between items-center">
  <a href="/" class="text-xl font-bold text-blue-500 hover:underline">Bagify</a>

  <nav class="space-x-4 text-sm font-medium flex items-center">
    <a href="/shop" class="hover:underline text-gray-700">Shop</a>
    <a href="/cart" class="hover:underline text-gray-700">Cart</a>

    <% if (typeof user !== 'undefined' && user) { %>
      <a href="/orders" class="hover:underline text-gray-700">Orders</a>
      <a href="/users/profile" class="hover:underline text-gray-700">Profile</a>

      <% if (user.role === "admin") { %>
        <a href="/admin" class="hover:underline text-purple-600 font-semibold">Admin Panel</a>
        <a href="/admin/orders" class="hover:underline text-purple-600 font-semibold">All Orders</a>
      <% } %>

      <a href="/users/logout" class="text-red-500 hover:underline">Logout</a>
    <% } else { %>
      <a href="/users/login" class="text-blue-500 hover:underline">Login</a>
    <% } %>
  </nav>
</header>
