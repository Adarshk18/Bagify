<div id="chatWidget" class="fixed bottom-6 right-6 w-80 bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden z-50">
  <div class="bg-blue-600 text-white p-3 flex justify-between items-center">
    <span>ðŸ¤– Bagify Assistant</span>
    <button onclick="document.getElementById('chatWidget').style.display='none'" class="text-white">âœ–</button>
  </div>
  <div id="chatMessages" class="p-3 h-64 overflow-y-auto text-sm space-y-2 text-gray-800 dark:text-white">
    <div>ðŸ‘‹ Hi! I can help with orders, tracking, and more.</div>
  </div>
  <form id="chatForm" class="flex border-t border-gray-200 dark:border-gray-600">
    <input type="text" id="chatInput" class="flex-1 p-2 text-sm bg-white dark:bg-gray-700 dark:text-white" placeholder="Type your message..." />
    <button type="submit" class="px-3 bg-blue-600 text-white">Send</button>
  </form>
</div>

<script>
  const chatForm = document.getElementById('chatForm');
  const chatInput = document.getElementById('chatInput');
  const chatMessages = document.getElementById('chatMessages');

  chatForm.addEventListener('submit', function (e) {
    e.preventDefault();
    const msg = chatInput.value.trim();
    if (!msg) return;

    // User Message
    const userDiv = document.createElement('div');
    userDiv.innerHTML = `ðŸ§‘: ${msg}`;
    chatMessages.appendChild(userDiv);

    // Simulated Bot Reply
    const botReply = document.createElement('div');
    botReply.innerHTML = `ðŸ¤–: Thank you! I'm still learning. Please visit the <a href="/orders" class="text-blue-600 underline">Orders</a> page for tracking.`;
    chatMessages.appendChild(botReply);

    chatInput.value = '';
    chatMessages.scrollTop = chatMessages.scrollHeight;
  });
</script>
