<%- include('./partials/header') %>

<section class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white shadow-md p-8 rounded-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-blue-600 mb-6 text-center">🔐 Forgot Password</h2>

    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 text-red-800 p-3 rounded text-sm text-center"><%= error %></div>
    <% } %>

    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 text-green-800 p-3 rounded text-sm text-center"><%= success %></div>
    <% } %>

    <form action="/users/forgot-password" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-semibold text-gray-700">Email Address</label>
        <input
          type="email"
          name="email"
          placeholder="Enter your registered email"
          class="w-full border px-4 py-2 rounded focus:outline-none focus:ring focus:border-blue-400"
          required
        />
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-semibold transition"
      >
        Send Reset Link
      </button>
    </form>
  </div>
</section>

<%- include('./partials/footer') %>
