<%- include('./partials/header') %>

<section class="min-h-screen bg-gray-100 flex items-center justify-center px-6 py-16">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-blue-600 mb-6 text-center">🔐 Forgot Password</h2>

    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4 text-center">
        <%= error %>
      </div>
    <% } %>

    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4 text-center">
        <%= success %>
      </div>
    <% } %>

    <form action="<%= formAction || '/forgot-password' %>" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-medium text-gray-700">Email</label>
        <input
          type="email"
          name="email"
          placeholder="Enter your registered email"
          required
          class="w-full border px-4 py-2 rounded focus:outline-none focus:ring focus:border-blue-300"
        />
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-semibold transition"
      >
        Send Reset Link
      </button>
    </form>

    <div class="text-center mt-4">
      <a href="/" class="text-sm text-gray-500 hover:text-blue-500">← Back to Home</a>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>
