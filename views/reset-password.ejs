<%- include('./partials/header') %>

<section class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <div class="bg-white shadow-md p-8 rounded-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-blue-600 mb-6 text-center">ğŸ” Reset Password</h2>

    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 text-red-800 p-3 rounded text-sm text-center"><%= error %></div>
    <% } %>

    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 text-green-800 p-3 rounded text-sm text-center"><%= success %></div>
    <% } %>

    <form action="<%= formAction %>" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-semibold text-gray-700">New Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter new password"
          class="w-full border px-4 py-2 rounded focus:outline-none focus:ring focus:border-blue-400"
          required
        />
      </div>

      <div>
        <label class="block mb-1 font-semibold text-gray-700">Confirm Password</label>
        <input
          type="password"
          name="confirm"
          placeholder="Confirm new password"
          class="w-full border px-4 py-2 rounded focus:outline-none focus:ring focus:border-blue-400"
          required
        />
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-semibold transition"
      >
        Reset Password
      </button>
    </form>
  </div>
</section>

<%- include('./partials/footer') %>
