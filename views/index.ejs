<section class="min-h-screen flex flex-col items-center justify-center bg-gray-100 py-20">
  <div class="max-w-3xl text-center px-6">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
      Welcome to <span class="text-blue-600">Bagify</span>
    </h1>
