<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-50 px-6 py-12">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-xl p-8">
    <h2 class="text-3xl font-bold text-center text-blue-600 mb-6">‚úèÔ∏è Edit Product</h2>

    <form action="/admin/edit/<%= product._id %>" method="POST" enctype="multipart/form-data" class="space-y-10">
      
      <!-- üñºÔ∏è Current Images -->
      <div class="text-center">
        <p class="text-gray-600 mb-2 font-medium">Current Product Images</p>
        <div class="flex flex-wrap gap-4 justify-center">
          <% if (product.images && product.images.length > 0) { %>
            <% product.images.forEach(img => { %>
              <img
                src="<%= img.startsWith('/images') ? img : '/images/' + img %>"
                alt="Product Image"
                class="w-24 h-24 object-contain border rounded"
              />
            <% }) %>
          <% } else { %>
            <img src="/images/placeholder.png" class="w-24 h-24 object-contain border rounded" />
          <% } %>
        </div>
      </div>

      <!-- üßæ Product Details -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Product Details</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block mb-1 font-medium">Name</label>
            <input
              type="text"
              name="name"
              required
              value="<%= product.name %>"
              class="w-full border px-4 py-2 rounded focus:outline-none focus:ring"
              placeholder="Product name"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium">Upload New Images (Optional)</label>
            <input
              type="file"
              name="images"
              multiple
              accept="image/*"
              class="w-full border px-4 py-2 rounded"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium">Original Price (‚Çπ)</label>
            <input
              type="number"
              name="originalPrice"
              value="<%= product.originalPrice %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="Eg: 4999"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium">Final Price (‚Çπ)</label>
            <input
              type="number"
              name="price"
              value="<%= product.price %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="Eg: 3999"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium">Discount (‚Çπ)</label>
            <input
              type="number"
              name="discount"
              value="<%= product.discount %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="Optional"
            />
          </div>

          <!-- üÜï Stock -->
          <div>
            <label class="block mb-1 font-medium">Stock Quantity</label>
            <input
              type="number"
              name="stock"
              min="0"
              value="<%= product.stock || 0 %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="Eg: 20"
            />
          </div>
        </div>
      </div>

      <!-- üé® Styling -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Panel Styling</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div>
            <label class="block mb-1 font-medium">Gradient BG Color</label>
            <input
              type="text"
              name="bgcolor"
              value="<%= product.bgcolor %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="#fcd34d or bg-yellow-400"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium">Panel BG Color</label>
            <input
              type="text"
              name="panelcolor"
              value="<%= product.panelcolor %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="#ffffff"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium">Text Color</label>
            <input
              type="text"
              name="textcolor"
              value="<%= product.textcolor %>"
              class="w-full border px-4 py-2 rounded"
              placeholder="#111827"
            />
          </div>
        </div>
      </div>

      <!-- ‚úÖ Submit -->
      <div class="text-center pt-4">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full font-semibold transition"
        >
          üíæ Save Changes
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
