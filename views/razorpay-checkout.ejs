<%- include('./partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4 py-10">
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full text-center">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">ðŸ§¾ Secure Payment</h2>
    <p class="text-gray-600 mb-6">You're about to pay <strong>â‚¹ <%= amount %></strong> for your order.</p>

    <button
      id="rzp-button"
      class="bg-green-600 hover:bg-green-700 transition text-white px-6 py-3 rounded-md text-lg font-medium"
    >
      Pay Now â‚¹ <%= amount %>
    </button>

    <p class="text-sm text-gray-400 mt-6">Powered by Razorpay</p>
  </div>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  const options = {
    key: "<%= key %>",
    amount: "<%= amount * 100 %>",
    currency: "INR",
    name: "Bagify",
    description: "Order Payment",
    order_id: "<%= orderId %>",
    handler: function (response) {
      fetch("/orders/payment-success", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(response)
      }).then(() => {
        window.location.href = "/orders";
      });
    },
    prefill: {
      email: "<%= user.email %>"
    },
    theme: {
      color: "#4CAF50"
    }
  };

  const rzp = new Razorpay(options);
  document.getElementById("rzp-button").onclick = function (e) {
    rzp.open();
    e.preventDefault();
  };
</script>

<%- include('./partials/footer') %>
